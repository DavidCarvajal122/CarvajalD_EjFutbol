@model IEnumerable<CarvajalD_EjFutbol.Models.Equipo>

@{
    ViewData["Title"] = "List";
}

<h1>List</h1>

<p>
    <a class="btn btn-info" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PartidosJugados)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PartidosGanados)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PartidosPerdidos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PartidosEmpatados)
            </th>
            <th>
                Puntos
            </th>
            <th></th>
        </tr>
        <table class="table table-striped table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Nombre</th>
                    <th>Partidos Jugados</th>
                    <th>Partidos Ganados</th>
                    <th>Partidos Empatados</th>
                    <th>Partidos Perdidos</th>
                    <th>Puntos</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                        <td>@Html.DisplayFor(modelItem => item.PartidosJugados)</td>
                        <td>@Html.DisplayFor(modelItem => item.PartidosGanados)</td>
                        <td>@Html.DisplayFor(modelItem => item.PartidosEmpatados)</td>
                        <td>@Html.DisplayFor(modelItem => item.PartidosPerdidos)</td>
                        <td>@((item.PartidosGanados * 3) + item.PartidosEmpatados)</td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-success" }) |
                            @Html.ActionLink("Ver Detalles", "Details", new { id = item.Id }, new { @class = "btn btn-info" }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                        </td>

                    </tr>
                }
            </tbody>
        </table>

    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            //línea para calcular puntos
            var puntos = (item.PartidosGanados * 3) + (item.PartidosEmpatados); 
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PartidosJugados)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PartidosGanados)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PartidosPerdidos)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PartidosEmpatados)
                </td>
                <td>
                    @puntos
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-success" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
